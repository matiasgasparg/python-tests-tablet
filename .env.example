# Configuración de la aplicación
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=run.py
PORT=5000

# Seguridad - CAMBIAR ESTOS VALORES EN PRODUCCIÓN
SECRET_KEY=dev-secret-key-change-in-production-use-strong-key
JWT_SECRET_KEY=jwt-secret-key-change-in-production-use-strong-key
JWT_ACCESS_TOKEN_EXPIRES=86400

# Base de datos
# Desarrollo (SQLite)
DATABASE_URL=sqlite:///birthday_invitations.db

# Producción (PostgreSQL) - Descomentar y configurar
# DATABASE_URL=postgresql://user:password@localhost:5432/birthday_db

# CORS
CORS_ORIGINS=*

# Email (opcional para futuras features)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
